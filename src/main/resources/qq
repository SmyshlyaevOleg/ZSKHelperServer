create table people(
                       person_id bigint GENERATED BY DEFAULT AS IDENTITY ,
                       telegram_id bigint PRIMARY KEY not null unique ,
                       full_name varchar(100) not null,
                       user_name varchar(100) not null unique

);

create table message(
                        message_id bigint GENERATED BY DEFAULT AS IDENTITY,
                        sender_id bigint references people(telegram_id) on delete set null,
                        sender_name varchar(100) not null,
                        message varchar(1000) not null,
                        created_at timestamp not null
)

